<IfModule mod_rewrite.c>
    RewriteEngine On

    # Opcional: desactivar redirección HTTPS porque Render ya fuerza HTTPS
    # Si lo activas, podría causar bucle
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirige todo a index.php si no es un archivo o carpeta existente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

# Evita mostrar archivos ocultos y protegidos
<FilesMatch "^\.">
    Require all denied
</FilesMatch>
